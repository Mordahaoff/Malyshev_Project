@model IEnumerable<Malyshev_Project.Models.Discount>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.IdProduct)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDiscount">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDiscount">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDiscount">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
